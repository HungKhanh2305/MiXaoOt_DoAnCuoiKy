@* ==========================================
    Views/Orders/Delete.cshtml
    ========================================== *@
@model _2001230507_NhanTuManh_B2.Models.Order

@{
    ViewBag.Title = "Xóa đơn hàng";
}

<div class="container mt-4">
    <h1>@ViewBag.Title</h1>

    <div class="alert alert-danger">
        <h4>Bạn có chắc chắn muốn xóa đơn hàng #@Model.OrderID?</h4>
    </div>

    <hr />
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Khách hàng:</dt>
                        <dd class="col-sm-9">@Model.Customer.FirstName @Model.Customer.LastName</dd>

                        <dt class="col-sm-3">Ngày đặt:</dt>
                        <dd class="col-sm-9">@Model.OrderDate?.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-3">Tổng tiền:</dt>
                        <dd class="col-sm-9"><strong>@Model.TotalAmount.ToString("N0") VNĐ</strong></dd>

                        <dt class="col-sm-3">Trạng thái:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@Model.OrderStatus</span>
                            <span class="badge bg-warning">@Model.PaymentStatus</span>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="mt-3">
                @using (Html.BeginForm("Delete", "Orders", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.OrderID)
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xác nhận xóa
                    </button>
                    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
                }
            </div>
        </div>
    </div>
</div>