@* ==========================================
    Views/Orders/Edit.cshtml
    ========================================== *@
@model _2001230507_NhanTuManh_B2.Models.Order

@{
    ViewBag.Title = "Sửa đơn hàng";
}

<div class="container mt-4">
    <h1>@ViewBag.Title #@Model.OrderID</h1>

    <hr />
    <div class="row">
        <div class="col-md-10">
            @using (Html.BeginForm("Edit", "Orders", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.OrderID)
                @Html.HiddenFor(model => model.OrderDate)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5>Thông tin khách hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            @Html.LabelFor(model => model.CustomerID, "Khách hàng", new { @class = "form-label" })
                            @Html.DropDownList("CustomerID", null, new { @class = "form-select" })
                            @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header bg-info text-white">
                        <h5>Địa chỉ giao hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            @Html.LabelFor(model => model.ShippingAddress, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.ShippingAddress, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ShippingAddress, "", new { @class = "text-danger" })
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.ShippingCity, new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.ShippingCity, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ShippingCity, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.ShippingPostalCode, new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.ShippingPostalCode, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ShippingPostalCode, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header bg-success text-white">
                        <h5>Thông tin đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.TotalAmount, new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.TotalAmount, new { @class = "form-control", type = "number", step = "0.01" })
                                    @Html.ValidationMessageFor(model => model.TotalAmount, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.DeliveryFee, new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.DeliveryFee, new { @class = "form-control", type = "number", step = "0.01" })
                                    @Html.ValidationMessageFor(model => model.DeliveryFee, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.OrderStatus, new { @class = "form-label" })
                                    @Html.DropDownListFor(model => model.OrderStatus, new SelectList(new[] {
                                        new { Value = "Pending", Text = "Chờ xử lý" },
                                        new { Value = "Confirmed", Text = "Đã xác nhận" },
                                        new { Value = "Preparing", Text = "Đang chuẩn bị" },
                                        new { Value = "Delivering", Text = "Đang giao" },
                                        new { Value = "Delivered", Text = "Đã giao" },
                                        new { Value = "Cancelled", Text = "Đã hủy" }
                                    }, "Value", "Text"), new { @class = "form-select" })
                                    @Html.ValidationMessageFor(model => model.OrderStatus, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.PaymentStatus, new { @class = "form-label" })
                                    @Html.DropDownListFor(model => model.PaymentStatus, new SelectList(new[] {
                                        new { Value = "Unpaid", Text = "Chưa thanh toán" },
                                        new { Value = "Paid", Text = "Đã thanh toán" },
                                        new { Value = "Refunded", Text = "Đã hoàn tiền" }
                                    }, "Value", "Text"), new { @class = "form-select" })
                                    @Html.ValidationMessageFor(model => model.PaymentStatus, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.PaymentMethod, new { @class = "form-label" })
                                    @Html.DropDownListFor(model => model.PaymentMethod, new SelectList(new[] {
                                        new { Value = "Cash on Delivery", Text = "Thanh toán khi nhận hàng" },
                                        new { Value = "Credit Card", Text = "Thẻ tín dụng" },
                                        new { Value = "Bank Transfer", Text = "Chuyển khoản" },
                                        new { Value = "E-Wallet", Text = "Ví điện tử" }
                                    }, "Value", "Text"), new { @class = "form-select" })
                                    @Html.ValidationMessageFor(model => model.PaymentMethod, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.DiscountAmount, new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.DiscountAmount, new { @class = "form-control", type = "number", step = "0.01" })
                                    @Html.ValidationMessageFor(model => model.DiscountAmount, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.EstimatedDeliveryTime, new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.EstimatedDeliveryTime, new { @class = "form-control", type = "datetime-local" })
                                    @Html.ValidationMessageFor(model => model.EstimatedDeliveryTime, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.ActualDeliveryTime, new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.ActualDeliveryTime, new { @class = "form-control", type = "datetime-local" })
                                    @Html.ValidationMessageFor(model => model.ActualDeliveryTime, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.Notes, new { @class = "form-label" })
                            @Html.TextAreaFor(model => model.Notes, 3, 0, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Cập nhật
                    </button>
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>