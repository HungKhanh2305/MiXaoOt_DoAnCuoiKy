@model IEnumerable<_2001230507_NhanTuManh_B2.Models.Order>

@{
    ViewBag.Title = "Quản lý đơn hàng (FASTFEAST)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 admin-container">
    <h1 class="text-gradient mb-4">
        <i class="fas fa-shipping-fast"></i> @ViewBag.Title
    </h1>

    <div class="admin-table">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Mã ĐH</th>
                    <th>Khách hàng</th>
                    <th class="sortable">
                        Ngày đặt <i class="fas fa-sort"></i>
                    </th>
                    <th>Địa chỉ giao hàng</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <!-- 1. Mã đơn hàng -->
                            <td class="fw-bold text-primary">#@item.OrderID</td>

                            <!-- 2. Tên khách hàng (Ghép FirstName và LastName từ bảng Customers) -->
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-placeholder me-2 bg-light text-secondary rounded-circle d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div>
                                        @if (item.Customer != null)
                                        {
                                            <strong>@item.Customer.FirstName @item.Customer.LastName</strong>
                                            <br />
                                            <small class="text-muted">@item.Customer.PhoneNumber</small>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Không xác định</span>
                                        }
                                    </div>
                                </div>
                            </td>

                            <!-- 3. Ngày đặt (OrderDate) -->
                            <td>
                                @if (item.OrderDate.HasValue)
                                {
                                    @item.OrderDate.Value.ToString("dd/MM/yyyy") <br />
                                    <small class="text-muted">@item.OrderDate.Value.ToString("HH:mm")</small>
                                }
                            </td>

                            <!-- 4. Địa chỉ giao (ShippingAddress) -->
                            <td>
                                <span title="@item.ShippingAddress @item.ShippingCity" class="d-inline-block text-truncate" style="max-width: 150px;">
                                    @item.ShippingAddress
                                </span>
                                <div class="small text-muted">@item.ShippingCity</div>
                            </td>

                            <!-- 5. Tổng tiền (TotalAmount) -->
                            <td class="fw-bold text-success">
                                @item.TotalAmount.ToString("N0") VNĐ
                            </td>

                            <!-- 6. Trạng thái (OrderStatus) -->
                            <!-- Các giá trị: Pending, Confirmed, Preparing, Delivering, Delivered, Cancelled -->
                            <td>
                                @{
                                    string badgeClass = "bg-secondary";
                                    string statusText = item.OrderStatus;
                                    string icon = "fa-circle";

                                    switch (item.OrderStatus)
                                    {
                                        case "Pending":
                                            badgeClass = "bg-warning text-dark";
                                            statusText = "Chờ xử lý";
                                            icon = "fa-clock";
                                            break;
                                        case "Confirmed":
                                            badgeClass = "bg-info text-dark";
                                            statusText = "Đã xác nhận";
                                            icon = "fa-check";
                                            break;
                                        case "Preparing":
                                            badgeClass = "bg-primary";
                                            statusText = "Đang chuẩn bị";
                                            icon = "fa-fire";
                                            break;
                                        case "Delivering":
                                            badgeClass = "bg-primary";
                                            statusText = "Đang giao";
                                            icon = "fa-motorcycle";
                                            break;
                                        case "Delivered":
                                            badgeClass = "bg-success";
                                            statusText = "Đã giao";
                                            icon = "fa-check-double";
                                            break;
                                        case "Cancelled":
                                            badgeClass = "bg-danger";
                                            statusText = "Đã hủy";
                                            icon = "fa-times";
                                            break;
                                    }
                                }
                                <span class="badge rounded-pill @badgeClass">
                                    <i class="fas @icon me-1"></i> @statusText
                                </span>
                            </td>

                            <!-- 7. Thao tác -->
                            <td class="table-actions text-center">
                                <a href="@Url.Action("Details", new { id = item.OrderID })"
                                   class="btn btn-sm btn-info btn-icon"
                                   title="Xem chi tiết" data-toggle="tooltip">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <a href="@Url.Action("Edit", new { id = item.OrderID })"
                                   class="btn btn-sm btn-warning btn-icon"
                                   title="Cập nhật trạng thái">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center py-5">
                            <div class="text-muted">
                                <i class="fas fa-box-open fa-3x mb-3"></i>
                                <p>Chưa có đơn hàng nào.</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>