@* Views/Products/Delete.cshtml *@
@model _2001230507_NhanTuManh_B2.Models.Product

@{
    ViewBag.Title = "Xóa sản phẩm";
}

<div class="container mt-4">
    <h1>@ViewBag.Title</h1>

    <div class="alert alert-danger">
        <h4>Bạn có chắc chắn muốn xóa sản phẩm này?</h4>
    </div>

    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Tên sản phẩm:</dt>
                        <dd class="col-sm-8"><strong>@Html.DisplayFor(model => model.ProductName)</strong></dd>

                        <dt class="col-sm-4">Danh mục:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.CategoryName)</dd>

                        <dt class="col-sm-4">Giá:</dt>
                        <dd class="col-sm-8"><strong>@Model.Price.ToString("N0") VNĐ</strong></dd>

                        <dt class="col-sm-4">Trạng thái:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsAvailable)
                            {
                                <span class="badge bg-success">Còn hàng</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Hết hàng</span>
                            }
                        </dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.ImageURL))
                    {
                        <img src="@Model.ImageURL" alt="@Model.ProductName" class="img-thumbnail" style="max-width: 200px;" />
                    }
                </div>
            </div>

            <div class="mt-3">
                @using (Html.BeginForm("Delete", "Products", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.ProductID)
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xác nhận xóa
                    </button>
                    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
                }
            </div>
        </div>
    </div>
</div>
