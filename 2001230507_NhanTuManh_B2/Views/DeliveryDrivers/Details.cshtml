@model _2001230507_NhanTuManh_B2.Models.DeliveryDriver

@{
    ViewBag.Title = "Thông tin tài xế";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 admin-container">
    <h1 class="text-gradient mb-4">
        <i class="fas fa-id-card"></i> @ViewBag.Title
    </h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-user-shield me-2"></i> @Model.FirstName @Model.LastName
                    </h5>
                    <span class="badge bg-light text-primary">ID: @Model.DriverID</span>
                </div>

                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-12 text-center py-3">
                            <!-- Avatar giả định -->
                            <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center mb-3"
                                 style="width: 100px; height: 100px; font-size: 3rem; color: #6c757d;">
                                <i class="fas fa-user"></i>
                            </div>
                            <h4>@Model.FirstName @Model.LastName</h4>
                            <p class="text-muted mb-0">@Model.PhoneNumber</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase small fw-bold">Thông tin liên hệ</h6>
                            <ul class="list-group list-group-flush mb-4">
                                <li class="list-group-item d-flex justify-content-between px-0">
                                    <span>Email:</span>
                                    <span class="fw-bold">@(string.IsNullOrEmpty(Model.Email) ? "Chưa cập nhật" : Model.Email)</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between px-0">
                                    <span>Số điện thoại:</span>
                                    <span class="fw-bold">@Model.PhoneNumber</span>
                                </li>
                            </ul>
                        </div>

                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase small fw-bold">Thông tin xe & Trạng thái</h6>
                            <ul class="list-group list-group-flush mb-4">
                                <li class="list-group-item d-flex justify-content-between px-0">
                                    <span>Loại xe:</span>
                                    <span>
                                        @{
                                            string vehicleIcon = "fa-motorcycle";
                                            if (!string.IsNullOrEmpty(Model.VehicleType) &&
                                               (Model.VehicleType.ToLower().Contains("car") || Model.VehicleType.ToLower().Contains("ô tô")))
                                            {
                                                vehicleIcon = "fa-car";
                                            }
                                        }
                                        <i class="fas @vehicleIcon me-1"></i> @Model.VehicleType
                                    </span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between px-0">
                                    <span>Biển số:</span>
                                    <span class="badge bg-dark">@Model.LicensePlate</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between px-0">
                                    <span>Trạng thái:</span>
                                    <!-- ĐÂY LÀ DÒNG ĐÃ SỬA LỖI -->
                                    @if (Model.IsAvailable == true)
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check-circle"></i> Sẵn sàng</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="fas fa-clock"></i> Đang bận / Off</span>
                                    }
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="row border-top pt-3">
                        <div class="col-12">
                            <h6 class="text-muted text-uppercase small fw-bold">Vị trí hiện tại</h6>
                            <p class="mb-0">
                                <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                @(string.IsNullOrEmpty(Model.CurrentLocation) ? "Chưa có dữ liệu định vị" : Model.CurrentLocation)
                            </p>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white d-flex justify-content-end gap-2 py-3">
                    <a href="@Url.Action("Edit", new { id = Model.DriverID })" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Chỉnh sửa
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>