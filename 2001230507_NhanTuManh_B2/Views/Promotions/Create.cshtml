@model _2001230507_NhanTuManh_B2.Models.Promotion

@{
    ViewBag.Title = "Tạo mã khuyến mãi mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 admin-container">
    <h1 class="text-gradient mb-4">
        <i class="fas fa-plus-circle"></i> @ViewBag.Title
    </h1>

    <div class="admin-form">
        @using (Html.BeginForm("Create", "Promotions", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="row">
                        <!-- Cột bên trái: Thông tin cơ bản -->
                        <div class="col-md-6">
                            <h5 class="mb-3 text-primary"><i class="fas fa-info-circle"></i> Thông tin chung</h5>

                            <!-- 1. Mã code -->
                            <div class="mb-3">
                                @Html.LabelFor(model => model.PromotionCode, "Mã khuyến mãi (Code)", new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-barcode"></i></span>
                                    @Html.EditorFor(model => model.PromotionCode, new { htmlAttributes = new { @class = "form-control text-uppercase", placeholder = "VD: SUMMER2024", required = "required" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.PromotionCode, "", new { @class = "text-danger small" })
                            </div>

                            <!-- 2. Mô tả -->
                            <div class="mb-3">
                                @Html.LabelFor(model => model.Description, "Mô tả chương trình", new { @class = "form-label fw-bold" })
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "3", placeholder = "Nhập mô tả chi tiết..." })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <!-- Cột bên phải: Giá trị giảm giá -->
                        <div class="col-md-6">
                            <h5 class="mb-3 text-success"><i class="fas fa-money-bill-wave"></i> Giá trị giảm</h5>

                            <div class="row">
                                <!-- 3. Loại giảm giá -->
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(model => model.DiscountType, "Loại giảm giá", new { @class = "form-label fw-bold" })
                                    <div class="input-group">
                                        <span class="input-group-text bg-light"><i class="fas fa-percentage"></i></span>
                                        @Html.DropDownListFor(model => model.DiscountType, new List<SelectListItem>
                                        {
                                            new SelectListItem { Text = "Theo phần trăm (%)", Value = "Percentage" },
                                            new SelectListItem { Text = "Số tiền cố định (VNĐ)", Value = "FixedAmount" }
                                        }, new { @class = "form-select" })
                                    </div>
                                </div>

                                <!-- 4. Giá trị -->
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(model => model.DiscountValue, "Giá trị giảm", new { @class = "form-label fw-bold" })
                                    @Html.EditorFor(model => model.DiscountValue, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0", step = "0.01" } })
                                    @Html.ValidationMessageFor(model => model.DiscountValue, "", new { @class = "text-danger small" })
                                </div>
                            </div>

                            <!-- 5. Đơn tối thiểu -->
                            <div class="mb-3">
                                @Html.LabelFor(model => model.MinimumOrderAmount, "Đơn hàng tối thiểu (VNĐ)", new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    <span class="input-group-text bg-light">VNĐ</span>
                                    @Html.EditorFor(model => model.MinimumOrderAmount, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                                </div>
                                <small class="text-muted">Nhập 0 nếu áp dụng cho mọi đơn hàng.</small>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="row mt-3">
                        <!-- Cột dưới trái: Thời gian -->
                        <div class="col-md-6">
                            <h5 class="mb-3 text-warning"><i class="fas fa-clock"></i> Thời gian áp dụng</h5>

                            <div class="row">
                                <!-- 6. Ngày bắt đầu -->
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(model => model.StartDate, "Bắt đầu", new { @class = "form-label fw-bold" })
                                    <!-- type="datetime-local" để chọn cả ngày và giờ -->
                                    @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local", required = "required" })
                                    @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger small" })
                                </div>

                                <!-- 7. Ngày kết thúc -->
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(model => model.EndDate, "Kết thúc", new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local", required = "required" })
                                    @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger small" })
                                </div>
                            </div>
                        </div>

                        <!-- Cột dưới phải: Giới hạn -->
                        <div class="col-md-6">
                            <h5 class="mb-3 text-secondary"><i class="fas fa-sliders-h"></i> Cấu hình khác</h5>

                            <!-- 8. Giới hạn lượt dùng -->
                            <div class="mb-3">
                                @Html.LabelFor(model => model.UsageLimit, "Giới hạn số lượt dùng", new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-users"></i></span>
                                    @Html.EditorFor(model => model.UsageLimit, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1", placeholder = "Để trống nếu không giới hạn" } })
                                </div>
                            </div>

                            <!-- 9. Trạng thái (IsActive) -->
                            <div class="mb-3">
                                <label class="form-label fw-bold d-block">Trạng thái</label>
                                <div class="form-check form-switch">
                                    @Html.CheckBox("IsActive", Model != null ? Model.IsActive.GetValueOrDefault(true) : true, new { @class = "form-check-input", role = "switch", id = "flexSwitchCheckChecked" })
                                    <label class="form-check-label" for="flexSwitchCheckChecked">Kích hoạt ngay</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex gap-2 mt-4 pt-3 border-top justify-content-end">
                        <a href="@Url.Action("Index")" class="btn btn-secondary px-4">
                            <i class="fas fa-arrow-left me-2"></i>Hủy bỏ
                        </a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fas fa-save me-2"></i>Lưu mã giảm giá
                        </button>
                    </div>
                </div>
            </div>
         }
    </div>
</div>