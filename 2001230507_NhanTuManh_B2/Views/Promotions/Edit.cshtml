@model _2001230507_NhanTuManh_B2.Models.Promotion

@{
    ViewBag.Title = "Cập nhật khuyến mãi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 admin-container">
    <h1 class="text-gradient mb-4">
        <i class="fas fa-edit"></i> @ViewBag.Title
    </h1>

    <div class="admin-form">
        @using (Html.BeginForm("Edit", "Promotions", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.PromotionID)
            @Html.HiddenFor(model => model.UsedCount) @* Giữ nguyên số lượt đã dùng *@

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="row">
                        <!-- Cột Trái -->
                        <div class="col-md-6">
                            <h5 class="mb-3 text-primary"><i class="fas fa-info-circle"></i> Thông tin chung</h5>

                            <div class="mb-3">
                                @Html.LabelFor(model => model.PromotionCode, "Mã khuyến mãi", new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-barcode"></i></span>
                                    @Html.EditorFor(model => model.PromotionCode, new { htmlAttributes = new { @class = "form-control text-uppercase", required = "required" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.PromotionCode, "", new { @class = "text-danger small" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(model => model.Description, "Mô tả", new { @class = "form-label fw-bold" })
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "3" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <!-- Cột Phải -->
                        <div class="col-md-6">
                            <h5 class="mb-3 text-success"><i class="fas fa-money-bill-wave"></i> Giá trị ưu đãi</h5>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(model => model.DiscountType, "Loại giảm giá", new { @class = "form-label fw-bold" })
                                    @Html.DropDownListFor(model => model.DiscountType, new List<SelectListItem>
                                    {
                                        new SelectListItem { Text = "Theo phần trăm (%)", Value = "Percentage" },
                                        new SelectListItem { Text = "Số tiền cố định (VNĐ)", Value = "FixedAmount" }
                                    }, new { @class = "form-select" })
                                </div>

                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(model => model.DiscountValue, "Giá trị", new { @class = "form-label fw-bold" })
                                    @Html.EditorFor(model => model.DiscountValue, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01" } })
                                </div>
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(model => model.MinimumOrderAmount, "Đơn tối thiểu (VNĐ)", new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    <span class="input-group-text bg-light">VNĐ</span>
                                    @Html.EditorFor(model => model.MinimumOrderAmount, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <h5 class="mb-3 text-warning"><i class="fas fa-clock"></i> Thời gian</h5>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(model => model.StartDate, "Bắt đầu", new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local", required = "required" })
                                    @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger small" })
                                </div>

                                <div class="col-md-6 mb-3">
                                    @Html.LabelFor(model => model.EndDate, "Kết thúc", new { @class = "form-label fw-bold" })
                                    @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local", required = "required" })
                                    @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger small" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h5 class="mb-3 text-secondary"><i class="fas fa-sliders-h"></i> Cấu hình</h5>

                            <div class="mb-3">
                                @Html.LabelFor(model => model.UsageLimit, "Giới hạn lượt dùng", new { @class = "form-label fw-bold" })
                                @Html.EditorFor(model => model.UsageLimit, new { htmlAttributes = new { @class = "form-control", type = "number", placeholder = "Để trống nếu vô hạn" } })
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold d-block">Trạng thái</label>
                                <div class="form-check form-switch">
                                    @Html.CheckBox("IsActive", Model.IsActive.GetValueOrDefault(), new { @class = "form-check-input", role = "switch", id = "isActiveSwitch" })
                                    <label class="form-check-label" for="isActiveSwitch">Đang kích hoạt</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 border-top pt-3 mt-3">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Hủy
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save"></i> Lưu cập nhật
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>