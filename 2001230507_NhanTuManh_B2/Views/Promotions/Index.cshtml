@model IEnumerable<_2001230507_NhanTuManh_B2.Models.Promotion>

@{
    ViewBag.Title = "Quản lý khuyến mãi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 admin-container">
    <h1 class="text-gradient mb-4">
        <i class="fas fa-tags"></i> @ViewBag.Title
    </h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="@Url.Action("Create")" class="btn btn-admin btn-admin-primary">
            <i class="fas fa-plus-circle"></i> Tạo mã khuyến mãi
        </a>
        <div class="search-box">
            <!-- Có thể thêm ô tìm kiếm mã ở đây -->
        </div>
    </div>

    <div class="admin-table">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Mã Code</th>
                    <th>Loại giảm giá</th>
                    <th>Giá trị</th>
                    <th>Thời gian áp dụng</th>
                    <th>Lượt dùng</th>
                    <th>Trạng thái</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <!-- 1. Mã Khuyến mãi -->
                            <td>
                                <div class="d-flex flex-column">
                                    <span class="fw-bold text-primary font-monospace" style="font-size: 1.1em;">
                                        @item.PromotionCode
                                    </span>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <small class="text-muted" style="max-width: 200px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" title="@item.Description">
                                            @item.Description
                                        </small>
                                    }
                                </div>
                            </td>

                            <!-- 2. Loại giảm giá (Percentage/FixedAmount) -->
                            <td>
                                @if (item.DiscountType == "Percentage")
                                {
                                    <span class="badge bg-info text-dark">
                                        <i class="fas fa-percent"></i> Theo phần trăm
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-money-bill"></i> Số tiền cố định
                                    </span>
                                }
                            </td>

                            <!-- 3. Giá trị giảm -->
                            <td class="fw-bold text-danger">
                                @if (item.DiscountType == "Percentage")
                                {
                                    <span>-@item.DiscountValue.ToString("N0")%</span>
                                }
                                else
                                {
                                    <span>-@item.DiscountValue.ToString("N0") VNĐ</span>
                                }
                                <br />
                                <small class="text-muted fw-normal">
                                    Đơn tối thiểu: @(item.MinimumOrderAmount.HasValue ? item.MinimumOrderAmount.Value.ToString("N0") : "0") đ
                                </small>
                            </td>

                            <!-- 4. Thời gian -->
                            <td>
                                <small>
                                    <i class="fas fa-calendar-alt text-muted"></i>
                                    @item.StartDate.ToString("dd/MM/yyyy")
                                </small>
                                <br />
                                <i class="fas fa-arrow-down text-muted small mx-1"></i>
                                <br />
                                <small>
                                    <i class="fas fa-calendar-times text-muted"></i>
                                    @item.EndDate.ToString("dd/MM/yyyy")
                                </small>
                            </td>

                            <!-- 5. Lượt dùng (Used/Limit) -->
                            <td>
                                @{
                                    var used = item.UsedCount ?? 0;
                                    var limit = item.UsageLimit;
                                    string progressColor = "bg-success";
                                    int percent = 0;

                                    if (limit.HasValue && limit.Value > 0)
                                    {
                                        percent = (int)((double)used / limit.Value * 100);
                                        if (percent > 90) { progressColor = "bg-danger"; }
                                        else if (percent > 70) { progressColor = "bg-warning"; }
                                    }
                                }

                                <div>
                                    <strong>@used</strong> / @(limit.HasValue ? limit.ToString() : "∞")
                                </div>
                                @if (limit.HasValue)
                                {
                                    <div class="progress" style="height: 5px; width: 80px;">
                                        <div class="progress-bar @progressColor" role="progressbar" style="width: @percent%"></div>
                                    </div>
                                }
                            </td>

                            <!-- 6. Trạng thái (Logic: Active + Chưa hết hạn + Còn lượt dùng) -->
                            <td>
                                @{
                                    bool isActive = item.IsActive.GetValueOrDefault();
                                    bool isExpired = item.EndDate < DateTime.Now;
                                    bool isOutOfStock = item.UsageLimit.HasValue && item.UsedCount >= item.UsageLimit;

                                    if (!isActive)
                                    {
                                        <span class="badge bg-secondary">Đã khóa</span>
                                    }
                                    else if (isExpired)
                                    {
                                        <span class="badge bg-danger">Hết hạn</span>
                                    }
                                    else if (isOutOfStock)
                                    {
                                        <span class="badge bg-dark">Hết lượt</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Đang chạy</span>
                                    }
                                }
                            </td>

                            <!-- 7. Thao tác -->
                            <td class="table-actions text-center">
                                <a href="@Url.Action("Details", new { id = item.PromotionID })"
                                   class="btn btn-sm btn-info btn-icon" title="Chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", new { id = item.PromotionID })"
                                   class="btn btn-sm btn-warning btn-icon" title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.PromotionID })"
                                   class="btn btn-sm btn-danger btn-icon" title="Xóa">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center py-5 text-muted">
                            <i class="fas fa-ticket-alt fa-3x mb-3"></i>
                            <p>Chưa có chương trình khuyến mãi nào.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>