@* Views/Customers/Index.cshtml *@
@model IEnumerable<_2001230507_NhanTuManh_B2.Models.Customer>

@{
    ViewBag.Title = "Danh sách khách hàng";
}

<div class="container mt-4">
    <h1>@ViewBag.Title</h1>

    <p>
        @Html.ActionLink("Thêm khách hàng mới", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Thành phố</th>
                    <th>Ngày đăng ký</th>
                    <th>Đơn hàng</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName @item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.City</td>
                        <td>
                            <!-- Sửa dòng 36 tại đây -->
                            @(item.RegistrationDate.HasValue ? item.RegistrationDate.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")
                        </td>
                        <td>
                            <span class="badge bg-primary">@(item.Orders != null ? item.Orders.Count : 0) đơn</span>
                        </td>
                        <td>
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.CustomerID }, new { @class = "btn btn-sm btn-info" })
                            @Html.ActionLink("Sửa", "Edit", new { id = item.CustomerID }, new { @class = "btn btn-sm btn-warning" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.CustomerID }, new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>