@* Views/Customers/Delete.cshtml *@
@model _2001230507_NhanTuManh_B2.Models.Customer

@{
    ViewBag.Title = "Xóa khách hàng";
}

<div class="container mt-4">
    <h1>@ViewBag.Title</h1>

    <div class="alert alert-danger">
        <h4>Bạn có chắc chắn muốn xóa khách hàng này?</h4>
    </div>

    <hr />
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Họ tên:</dt>
                <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Số điện thoại:</dt>
                <dd class="col-sm-8">@Model.PhoneNumber</dd>

                <dt class="col-sm-4">Số đơn hàng:</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-warning">@(Model.Orders != null ? Model.Orders.Count : 0) đơn</span>
                </dd>
            </dl>

            @if (Model.Orders != null && Model.Orders.Any())
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    Cảnh báo: Khách hàng này có @Model.Orders.Count đơn hàng. Xóa khách hàng có thể ảnh hưởng đến dữ liệu đơn hàng.
                </div>
            }

            @using (Html.BeginForm("Delete", "Customers", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.CustomerID)
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Xác nhận xóa
                </button>
                @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
            }
        </div>
    </div>
</div>