@model _2001230507_NhanTuManh_B2.Models.Customer

@{
    ViewBag.Title = "Chi tiết khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 admin-container">
    <h1 class="text-gradient mb-4">
        <i class="fas fa-user-circle"></i> @ViewBag.Title
    </h1>

    <div class="row">
        <div class="col-md-8">
            <!-- Thẻ thông tin khách hàng -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Thông tin cá nhân</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Họ tên:</dt>
                        <dd class="col-sm-8 fw-bold">@Model.FirstName @Model.LastName</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Số điện thoại:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Chưa cập nhật" : Model.PhoneNumber)</dd>

                        <dt class="col-sm-4">Địa chỉ:</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Thành phố:</dt>
                        <dd class="col-sm-8">@Model.City</dd>

                        <dt class="col-sm-4">Mã bưu điện:</dt>
                        <dd class="col-sm-8">@Model.PostalCode</dd>

                        <dt class="col-sm-4">Ngày đăng ký:</dt>
                        <dd class="col-sm-8">
                            @(Model.RegistrationDate.HasValue ? Model.RegistrationDate.Value.ToString("dd/MM/yyyy HH:mm") : "Không có dữ liệu")
                        </dd>

                        <dt class="col-sm-4">Lần đăng nhập cuối:</dt>
                        <dd class="col-sm-8">
                            @* Đã sửa lỗi trùng lặp code ở đây *@
                            @(Model.LastLoginDate.HasValue ? Model.LastLoginDate.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa đăng nhập lần nào")
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Lịch sử đơn hàng -->
            @if (Model.Orders != null && Model.Orders.Any())
            {
                <div class="card shadow-sm mt-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 text-dark"><i class="fas fa-history"></i> Lịch sử đơn hàng (@Model.Orders.Count đơn)</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Mã đơn</th>
                                        <th>Ngày đặt</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders.OrderByDescending(o => o.OrderDate))
                                    {
                                        <tr>
                                            <td class="text-primary fw-bold">#@order.OrderID</td>
                                            <td>
                                                @* Sửa lỗi CS1501 cho OrderDate *@
                                                @(order.OrderDate.HasValue ? order.OrderDate.Value.ToString("dd/MM/yyyy") : "")
                                            </td>
                                            <td class="fw-bold text-success">
                                                @* Kiểm tra null cho TotalAmount để an toàn *@
                                                @(order.TotalAmount != null ? order.TotalAmount.ToString("N0") : "0") VNĐ
                                            </td>
                                            <td>
                                                @{
                                                    string badgeClass = "bg-secondary";
                                                    if (order.OrderStatus == "Completed" || order.OrderStatus == "Đã giao") { badgeClass = "bg-success"; }
                                                    else if (order.OrderStatus == "Pending" || order.OrderStatus == "Chờ xử lý") { badgeClass = "bg-warning text-dark"; }
                                                    else if (order.OrderStatus == "Cancelled" || order.OrderStatus == "Đã hủy") { badgeClass = "bg-danger"; }
                                                }
                                                <span class="badge @badgeClass">@order.OrderStatus</span>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", "Orders", new { id = order.OrderID })" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> Xem
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info mt-3">
                    <i class="fas fa-info-circle"></i> Khách hàng này chưa có đơn hàng nào.
                </div>
            }

            <div class="mt-4 pb-4">
                <a href="@Url.Action("Edit", new { id = Model.CustomerID })" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Sửa thông tin
                </a>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>