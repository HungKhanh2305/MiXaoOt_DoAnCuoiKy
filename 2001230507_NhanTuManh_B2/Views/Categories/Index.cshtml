@* Views/Categories/Index.cshtml *@
@model IEnumerable<_2001230507_NhanTuManh_B2.Models.Category>

@{
    ViewBag.Title = "Danh sách danh mục";
}

<div class="container mt-4">
    <h1>@ViewBag.Title</h1>

    <p>
        @Html.ActionLink("Thêm danh mục mới", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Số sản phẩm</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            <span class="badge bg-info">@(item.Products != null ? item.Products.Count : 0) sản phẩm</span>
                        </td>
                        <td>
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryID }, new { @class = "btn btn-sm btn-info" })
                            @Html.ActionLink("Sửa", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-sm btn-warning" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>