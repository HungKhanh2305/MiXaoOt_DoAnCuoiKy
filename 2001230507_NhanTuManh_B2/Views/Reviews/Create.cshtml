@* ==========================================
    Views/Reviews/Create.cshtml
    ========================================== *@
@model _2001230507_NhanTuManh_B2.Models.Review

@{
    ViewBag.Title = "Thêm đánh giá mới";
}

<div class="container mt-4">
    <h1>@ViewBag.Title</h1>
    @using (Html.BeginForm("Create", "Reviews", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            @Html.LabelFor(model => model.CustomerID, "Khách hàng", new { @class = "form-label" })
            @Html.DropDownList("CustomerID", null, "-- Chọn khách hàng --", new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label class="form-label">Đánh giá cho</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="reviewType" id="reviewProduct" value="product" checked />
                <label class="form-check-label" for="reviewProduct">Sản phẩm</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="reviewType" id="reviewOrder" value="order" />
                <label class="form-check-label" for="reviewOrder">Đơn hàng</label>
            </div>
        </div>

        <div class="mb-3" id="productSelect">
            @Html.LabelFor(model => model.ProductID, "Sản phẩm", new { @class = "form-label" })
            @Html.DropDownList("ProductID", null, "-- Chọn sản phẩm --", new { @class = "form-select" })
        </div>

        <div class="mb-3" id="orderSelect" style="display:none;">
            @Html.LabelFor(model => model.OrderID, "Đơn hàng", new { @class = "form-label" })
            @Html.DropDownList("OrderID", null, "-- Chọn đơn hàng --", new { @class = "form-select" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Rating, new { @class = "form-label" })
            @Html.DropDownListFor(model => model.Rating, new SelectList(new[] {
                new { Value = 5, Text = "⭐⭐⭐⭐⭐ Xuất sắc" },
                new { Value = 4, Text = "⭐⭐⭐⭐ Tốt" },
                new { Value = 3, Text = "⭐⭐⭐ Trung bình" },
                new { Value = 2, Text = "⭐⭐ Kém" },
                new { Value = 1, Text = "⭐ Rất kém" }
            }, "Value", "Text"), new { @class = "form-select" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Comment, new { @class = "form-label" })
            @Html.TextAreaFor(model => model.Comment, 5, 0, new { @class = "form-control", placeholder = "Chia sẻ trải nghiệm..." })
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('input[name="reviewType"]').change(function () {
                if ($(this).val() === 'product') {
                    $('#productSelect').show();
                    $('#orderSelect').hide();
                } else {
                    $('#productSelect').hide();
                    $('#orderSelect').show();
                }
            });
        });
    </script>
}