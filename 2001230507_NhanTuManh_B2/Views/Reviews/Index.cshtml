@model IEnumerable<_2001230507_NhanTuManh_B2.Models.Review>

@{
    ViewBag.Title = "Quản lý đánh giá";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 admin-container">
    <h1 class="text-gradient mb-4">
        <i class="fas fa-comments"></i> @ViewBag.Title
    </h1>

    <p>
        @Html.ActionLink("Thêm đánh giá mới", "Create", null, new { @class = "btn btn-admin btn-admin-primary" })
    </p>

    <div class="admin-table">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Sản phẩm</th>
                    <th>Khách hàng</th>
                    <th style="min-width: 120px;">Đánh giá</th>
                    <th style="width: 35%;">Nội dung</th>
                    <th>Ngày đăng</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <!-- 1. Tên sản phẩm -->
                            <td>
                                @if (item.Product != null)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="ms-2">
                                            <div class="fw-bold">@item.Product.ProductName</div>
                                            <small class="text-muted">ID: @item.ProductID</small>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-danger">Sản phẩm đã xóa</span>
                                }
                            </td>

                            <!-- 2. Khách hàng -->
                            <td>
                                @if (item.Customer != null)
                                {
                                    <i class="fas fa-user-circle text-secondary"></i>
                                    <strong>@item.Customer.FirstName @item.Customer.LastName</strong>
                                }
                                else
                                {
                                    <span class="text-muted">Ẩn danh</span>
                                }
                            </td>

                            <!-- 3. Số sao (Hiển thị icon ngôi sao) -->
                            <td>
                                <div class="text-warning">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= item.Rating)
                                        {
                                            <i class="fas fa-star"></i> <!-- Sao đầy -->
                                        }
                                        else
                                        {
                                            <i class="far fa-star text-muted"></i> <!-- Sao rỗng -->
                                        }
                                    }
                                </div>
                                <small class="text-muted">(@item.Rating/5)</small>
                            </td>

                            <!-- 4. Nội dung bình luận -->
                            <td>
                                @if (!string.IsNullOrEmpty(item.Comment))
                                {
                                    // Cắt chuỗi nếu quá dài để bảng không bị vỡ
                                    string displayComment = item.Comment.Length > 80
                                                            ? item.Comment.Substring(0, 80) + "..."
                                                            : item.Comment;
                                    <span title="@item.Comment">@displayComment</span>
                                }
                                else
                                {
                                    <em class="text-muted">Không có nội dung</em>
                                }
                            </td>

                            <!-- 5. Ngày đăng -->
                            <td>
                                @if (item.ReviewDate.HasValue)
                                {
                                    <span>@item.ReviewDate.Value.ToString("dd/MM/yyyy")</span> <br />
                                    <small class="text-muted">@item.ReviewDate.Value.ToString("HH:mm")</small>
                                }
                            </td>

                            <!-- 6. Thao tác -->
                            <td class="table-actions text-center">
                                <a href="@Url.Action("Details", new { id = item.ReviewID })"
                                   class="btn btn-sm btn-info btn-icon"
                                   title="Xem chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <!-- Thường admin chỉ xóa đánh giá xấu/spam chứ không sửa -->
                                <a href="@Url.Action("Delete", new { id = item.ReviewID })"
                                   class="btn btn-sm btn-danger btn-icon"
                                   title="Xóa đánh giá">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-5 text-muted">
                            <i class="fas fa-comment-slash fa-3x mb-3"></i>
                            <p>Chưa có đánh giá nào từ khách hàng.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>