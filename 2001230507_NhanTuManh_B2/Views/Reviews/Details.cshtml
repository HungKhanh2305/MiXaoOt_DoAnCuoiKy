@model _2001230507_NhanTuManh_B2.Models.Review

@{
    ViewBag.Title = "Chi tiết đánh giá";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 admin-container">
    <h1 class="text-gradient mb-4">
        <i class="fas fa-comment-dots"></i> @ViewBag.Title
    </h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 text-primary">ID Đánh giá: #@Model.ReviewID</h5>
                    <small class="text-muted">
                        <i class="fas fa-calendar-alt"></i>
                        <!-- SỬA LỖI CS1501 TẠI ĐÂY -->
                        @(Model.ReviewDate.HasValue ? Model.ReviewDate.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")
                    </small>
                </div>

                <div class="card-body">
                    <div class="row mb-4">
                        <!-- Thông tin sản phẩm -->
                        <div class="col-md-12 mb-3">
                            <label class="fw-bold text-muted text-uppercase small">Sản phẩm được đánh giá</label>
                            <div class="d-flex align-items-center mt-2 p-3 border rounded bg-white">
                                @if (Model.Product != null)
                                {
                                    <div class="flex-shrink-0 text-success" style="font-size: 2rem;">
                                        <i class="fas fa-hamburger"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h5 class="mb-0">@Model.Product.ProductName</h5>
                                        <small class="text-muted">ID Sản phẩm: @Model.ProductID</small>
                                    </div>
                                    <a href="@Url.Action("Details", "Products", new { id = Model.ProductID })" class="btn btn-sm btn-outline-primary">
                                        Xem sản phẩm
                                    </a>
                                }
                                else
                                {
                                    <span class="text-danger">Sản phẩm đã bị xóa</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Thông tin người đánh giá -->
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold text-muted text-uppercase small">Người đánh giá</label>
                            <div class="mt-2">
                                @if (Model.Customer != null)
                                {
                                    <p class="mb-1 fw-bold">
                                        <i class="fas fa-user-circle text-secondary"></i>
                                        @Model.Customer.FirstName @Model.Customer.LastName
                                    </p>
                                    <p class="small text-muted mb-0">Email: @Model.Customer.Email</p>
                                }
                                else
                                {
                                    <span class="text-muted">Khách vãng lai / Ẩn danh</span>
                                }
                            </div>
                        </div>

                        <!-- Điểm số -->
                        <div class="col-md-6 mb-3">
                            <label class="fw-bold text-muted text-uppercase small">Mức độ hài lòng</label>
                            <div class="mt-2 text-warning fs-4">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Model.Rating)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star text-secondary opacity-25"></i>
                                    }
                                }
                                <span class="fs-6 text-dark ms-2">(@Model.Rating/5)</span>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <!-- Nội dung bình luận -->
                    <div class="mb-3">
                        <label class="fw-bold text-muted text-uppercase small">Nội dung bình luận</label>
                        <div class="mt-2 p-3 bg-light rounded fst-italic text-secondary border-start border-4 border-warning">
                            <i class="fas fa-quote-left me-2 text-warning"></i>
                            @(string.IsNullOrEmpty(Model.Comment) ? "Không có nội dung mô tả." : Model.Comment)
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                        <a href="@Url.Action("Delete", new { id = Model.ReviewID })" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Xóa đánh giá
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>