@* ==========================================
    Views/Reviews/Edit.cshtml
    ========================================== *@
@model _2001230507_NhanTuManh_B2.Models.Review

@{
    ViewBag.Title = "Sửa đánh giá";
}

<div class="container mt-4">
    <h1>@ViewBag.Title</h1>
    @using (Html.BeginForm("Edit", "Reviews", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ReviewID)
        @Html.HiddenFor(model => model.ReviewDate)

        <div class="mb-3">
            @Html.LabelFor(model => model.CustomerID, "Khách hàng", new { @class = "form-label" })
            @Html.DropDownList("CustomerID", null, new { @class = "form-select" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Rating, new { @class = "form-label" })
            @Html.DropDownListFor(model => model.Rating, new SelectList(new[] {
                new { Value = 5, Text = "⭐⭐⭐⭐⭐ Xuất sắc" },
                new { Value = 4, Text = "⭐⭐⭐⭐ Tốt" },
                new { Value = 3, Text = "⭐⭐⭐ Trung bình" },
                new { Value = 2, Text = "⭐⭐ Kém" },
                new { Value = 1, Text = "⭐ Rất kém" }
            }, "Value", "Text"), new { @class = "form-select" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Comment, new { @class = "form-label" })
            @Html.TextAreaFor(model => model.Comment, 5, 0, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
    }
</div>