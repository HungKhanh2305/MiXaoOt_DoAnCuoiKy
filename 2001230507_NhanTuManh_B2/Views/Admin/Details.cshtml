@* ==========================================
    Views/Admins/Details.cshtml
    ========================================== *@
@model _2001230507_NhanTuManh_B2.Models.Admin

@{
    ViewBag.Title = "Chi tiết quản trị viên";
}

<div class="container mt-4">
    <h1>@ViewBag.Title</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5>Thông tin quản trị viên</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Tên đăng nhập:</dt>
                        <dd class="col-sm-8"><strong>@Model.Username</strong></dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Vai trò:</dt>
                        <dd class="col-sm-8">
                            @switch (Model.Role)
                            {
                                case "SuperAdmin":
                                    <span class="badge bg-danger fs-6">Super Admin</span>
                                    break;
                                case "OrderManager":
                                    <span class="badge bg-primary fs-6">Quản lý đơn hàng</span>
                                    break;
                                case "ProductManager":
                                    <span class="badge bg-success fs-6">Quản lý sản phẩm</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary fs-6">@Model.Role</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-4">Ngày tạo:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Lần đăng nhập cuối:</dt>
                        <dd class="col-sm-8">
                            @if (Model.LastLogin.HasValue)
                            {
                                @Model.LastLogin.Value.ToString("dd/MM/yyyy HH:mm")
                            }
                            else
                            {
                                <span class="text-muted">Chưa đăng nhập</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="mt-3">
                @Html.ActionLink("Sửa", "Edit", new { id = Model.AdminID }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>